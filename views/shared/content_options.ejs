<h2>Publish Options</h2>
<div class="_pea-document">
	<% if(genericdoc){%>
	<div class="_pea-row _pea-container-forminput">
		<div class="_pea-col-span2">
			<small>ID:</small>
		</div>
		<input type="text" id="docidlabel" disabled="disabled" class="_pea-col-span10" value="<%= genericdoc._id %>" >
	</div>
	<div class="_pea-row _pea-container-forminput">
		<div class="_pea-col-span2">
			<small>Name:</small>
		</div>
		<input type="text" id="docidlabel" class="_pea-col-span10" name="name" value="<%= genericdoc.name %>" >
	</div>
	<%}%>
	<div class="_pea-row _pea-container-forminput">
		<div class="_pea-col-span2">
			<small>Status:</small>
		</div>
	<% var docstatus = [{
			"value":"draft",
			"label":"Draft"
			},{
			"value":"schedule",
			"label":"Schedule in advance"
			},{
			"value":"publish",
			"label":"Publish"
			},{
			"value":"review",
			"label":"Review"
			},{
			"value":"trash",
			"label":"Trash"
			}]; %>
		<select name="status" class="_pea-col-span10 autoFormSubmit">
			<% docstatus.forEach(function(status){
				%>
					<option <% if(genericdoc && typeof genericdoc.status==='string' && genericdoc.status === status.value ){%> selected="selected"
					<%}%> value="<%= status.value %>"><%= status.label %></option>
				<%
				}); %>
		</select>
	</div>
	<div class="_pea-row _pea-container-forminput">
		<div class="_pea-col-span2">
			<small>Date:</small>
		</div>
		<input type="date" id="newitemdate" class="_pea-col-span10" value="<% if(serverdate){%><%= serverdate %><%}%>" name="date">
	</div>
	<div class="_pea-row _pea-container-forminput">
		<div class="_pea-col-span2">
			<small>Time:</small>
		</div>
		<input type="time" id="newitemtime" class="_pea-col-span10" value="<% if(servertime){%><%= servertime %><%}%>" name="time">
		<!-- http://cronchecker.net/check?utf8=%E2%9C%93&statement=1+*+*+*+*+*&button= -->
	</div>
	<% if(typeof genericdocname === "string" && genericdoc){%>
		
		<div class="_pea-text-center">
			<!-- <input type="submit" name="save_button" value="<% if(genericdoc){%>Update<%}else{%>Save<%}%>" class="_pea-button _pea-color-success"/> -->
			<a href="/p-admin/<%= genericdocname %>/new" target="_blank" class="_pea-button _pea-color-info">New <%= genericdocTitle %></a>
			<a id="clone-item-button" class="_pea-button ">Clone Copy</a>

			<% if(genericdoc){%> <a href="/<%= genericdocname %>/<%= genericdoc.name %>" target="_blank" class="_pea-button _pea-color-default"/>View <%= genericdocTitle %></a> <%}%>
		</div>
	<%}%>
</div>