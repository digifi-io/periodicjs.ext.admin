<% include ../../shared/header %>
<% include ../../shared/nav %>
	<div class="_pea-container">
		<div class="_pea_row">
			<div class="_pea-col-span12">
				<h2><%= theme.name %>
					<small class="_pea-form">
						<%if(theme.name === theme.activetheme){%>
							<!-- <a href="/p-admin/theme/<%= theme.name %>/disable" class="_pea-button _pea-color-warn enable-ext-button">disable</a> -->
							<a class="_pea-button switch-theme-button _pea-color-info">active</a>
						<%}
						else{%>
							<!-- <a href="/p-admin/theme/<%= theme.name %>/enable" class="_pea-button enable-ext-button">switch</a> -->
							<a href="/p-admin/theme/<%= theme.name %>/enable" class="_pea-button switch-theme-button enable-theme-button">switch</a>
						<%}%>
					</small>
				</h2>
			</div>
		</div>
		<div class="_pea-row">
			<div class="_pea-col-span12">
				<div class="_pea-row _pea-container-forminput _pea-text-left _pea-form">
					<h3>periodicjs.theme.json</h3>
				</div>
				<div class="_pea-document">
					<pre class="code-output">
<%- JSON.stringify(themedata.packagefile,null,4) %>
					</pre>
				</div>
			</div>
		</div>
		<div class="_pea-row">
			<div class="_pea-col-span12">
				<div class="_pea-row _pea-container-forminput _pea-text-left _pea-form">
					<h3>routes.js </h3>
				</div>
				<div class="_pea-document">
					<pre class="code-output">
<%- themedata.routefile %>
					</pre>
				</div>
			</div>
		</div>
	</div>
	<div style="display:none">
		<div id="view-ext-info-modal">
			<h1 class="title" style="word-wrap: break-word;">Extension name</h1>
			<p class="desc">description</p>
			<p>
				<ul class="versions">
					<li>install <a class="install-ext-version">latest<a></li>
					<li>install 0.0.1</li>
				</ul>
			</p>
		</div>
	</div>
<% include ../../shared/footer %>
