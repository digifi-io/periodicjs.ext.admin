<% include ../../shared/header %>
<% include ../../shared/nav %>
	<div class="_pea-container">
		<div class="_pea-row _pea-form">
			<div class="_pea-col-span6">
				<a href="/p-admin/post/new" class="_pea-button _pea-color-info">New Document</a>
			</div>
			<div class="_pea-col-span6 _pea-text-right">
				<form class="_pea-form" method="get">
					<input type="text" placeholder="search" class="_pea-col-span10" name="search"/>
					<input type="submit" name="searchbutton" value="search" class="_pea-col-span2"  />
				</form>
			</div>
		</div>
		<div class="_pea-row">
			<div class="_pea-col-span12">
				<div class="_pea-document">
					<table class="_pea-table">
						<thead>
							<tr class="_pea-text-left">
								<th>Title</th>
								<th>Author</th>
								<th>Categories</th>
								<th>Tags</th>
								<th>Type</th>
								<th>Date</th>
							</tr>
						</thead>
						<tbody>
							<% if(posts.length>0){
									posts.forEach(function(post){ %>
										<tr>
											<td> <a href="/p-admin/post/edit/<%= post.name %>"> <%= post.title %> </a></td>
											<td><%= post.primaryauthor.username %></td>
											<td>
												<%if(post.categories && post.categories.length>0){
													post.categories.forEach(function(category){%>
														<a href="/p-admin/posts/categories/<%= category.name %>"><%= category.title %></a>,
													<%});
												}%>
											</td>
											<td>
												<%if(post.tags && post.tags.length>0){
													post.tags.forEach(function(tag){%>
														<a href="/p-admin/posts/tags/<%= tag.name %>"><%= tag.title %></a>,
													<%});
												}%>
											</td>
											<td>
												<%if(post.contenttypes && post.contenttypes.length>0){
													post.contenttypes.forEach(function(contenttype){%>
														<a href="/p-admin/posts/contenttype/<%= contenttype.name %>"><%= contenttype.title %></a>,
													<%});
												}%>
											</td>
											<td>
												<% var disDate = new Date(post.createdat) %>
												<%= (disDate.getFullYear()) %>/
												<%= (disDate.getMonth()+1) %>/
												<%= (disDate.getDate()) %>
											</td>
										</tr>
										<%
									});
								}
								else{ %>
									<tr><td colspan="5" class="_pea-text-center">No Posts!</td></tr>
								<%} %>
						</tbody>
						<tfoot>
							<tr class="_pea-text-left">
								<th>Title</th>
								<th>Author</th>
								<th>Categories</th>
								<th>Tags</th>
								<th>Type</th>
								<th>Date</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
<% include ../../shared/footer %>
