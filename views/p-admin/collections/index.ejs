<% include ../../shared/header %>
<% include ../../shared/nav %>
	<div class="_pea-container">
		<div class="_pea-row _pea-form">
			<div class="_pea-col-span6">
				<a href="/p-admin/collection/new" class="_pea-button _pea-color-info">New Collection</a>
			</div>
			<div class="_pea-col-span6 _pea-text-right">
				<form class="_pea-form" method="get">
					<input type="text" placeholder="search" class="_pea-col-span10" name="search"/>
					<input type="submit" name="searchbutton" value="search" class="_pea-col-span2"  />
				</form>
			</div>
		</div>
		<div class="_pea-row">
			<div class="_pea-col-span12">
				<div class="_pea-document">
					<table class="_pea-table">
						<thead>
							<tr class="_pea-text-left">
								<th class="_pea-col-span6">Title</th>
								<th class="_pea-col-span1">Author</th>
								<th class="_pea-col-span1">Categories</th>
								<th class="_pea-col-span2">Tags</th>
								<th class="_pea-col-span1">Type</th>
								<th class="_pea-col-span1">Date</th>
							</tr>
						</thead>
						<tbody>
							<% if(collections.length>0){
									collections.forEach(function(collection){ %>
										<tr>
											<td class="_pea-col-span6"> 
												<% if(collection.primaryasset && collection.primaryasset.fileurl  && item.primaryasset.assettype.match("image")){%>
													<div class="_pea-pull-right _pea-col-span9" style="height:100%;">
														<a href="/p-admin/collection/edit/<%= collection.name %>" style="position:relative; vertical-align:center;"><%= collection.title %> </a>
														
													</div>
													<div class="_pea-pull-left _pea-col-span3" style=" overflow:hidden; max-height:5em; padding-right:1em;">
													
														<img src="<%- collection.primaryasset.fileurl %>" style="width:100%; height:auto;" />
													</div>
												<%} 
												else{%>

												<div class="_pea-col-span12">
													<a href="/p-admin/collection/edit/<%= collection.name %>"><%= collection.title %> </a>
												</div>
												<%}%>
											</td>
											<td><%= collection.primaryauthor.username %></td>
											<td>
												<%if(collection.categories && collection.categories.length>0){
													collection.categories.forEach(function(category){%>
														<a href="/p-admin/collections/categories/<%= category.name %>"><%= category.title %></a>,
													<%});
												}%>
											</td>
											<td>
												<%if(collection.tags && collection.tags.length>0){
													collection.tags.forEach(function(tag){%>
														<a href="/p-admin/collections/tags/<%= tag.name %>"><%= tag.title %></a>,
													<%});
												}%>
											</td>
											<td>
												<%if(collection.contenttypes && collection.contenttypes.length>0){
													collection.contenttypes.forEach(function(contenttype){%>
														<a href="/p-admin/collections/contenttype/<%= contenttype.name %>"><%= contenttype.title %></a>,
													<%});
												}%>
											</td>
											<td>
												<% var disDate = new Date(collection.createdat) %>
												<%= (disDate.getFullYear()) %>/
												<%= (disDate.getMonth()+1) %>/
												<%= (disDate.getDate()) %>
											</td>
										</tr>
										<%
									});
								}
								else{ %>
									<tr><td colspan="6" class="_pea-text-center">No Collections!</td></tr>
								<%} %>
						</tbody>
						<tfoot>
							<tr class="_pea-text-left">
								<th>Title</th>
								<th>Author</th>
								<th>Categories</th>
								<th>Tags</th>
								<th>Type</th>
								<th>Date</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
<% include ../../shared/footer %>